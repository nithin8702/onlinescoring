    <!-- 0 or 1 -->
    <define name="T_01">
        <data type="nonNegativeInteger">
            <param name="maxInclusive">1</param>
        </data>
    </define>

    <!-- 0 through 4 -->
    <define name="T_0to3">
        <data type="nonNegativeInteger">
            <param name="maxInclusive">3</param>
        </data>
    </define>

    <!-- 0 through 7 -->
