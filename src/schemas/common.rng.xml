            <ref name="NoAnswer"/>
        </choice>
    </define>

    <!-- 9999 -->
    <define name="NoAnswer">
        <value type="positiveInteger">9999</value>
    </define>

    <!-- RadioGroup: Yes/No/Cancel -->
    <define name="T_2_Choices">
        <choice>
            <value type="positiveInteger">1</value>
            <value type="positiveInteger">2</value>
