<!--*-->
    <define name="T_String">
        <choice>
            <data type="string">
                <param name="pattern">[\w\-\+@\?% ,\.();/:!]+</param>
                <param name="whiteSpace">collapse</param>
                <param name="maxLength">500</param>
            </data>
            <ref name="NoAnswer"/>
        </choice>
    </define>

    <define name="T_StringWithQuotes">
        <choice>
            <data type="string">
                <param name="pattern">[\w\-\+@\?% ,\.();/':!]+</param>
                <param name="whiteSpace">collapse</param>
                <param name="maxLength">500</param>
            </data>
            <ref name="NoAnswer"/>
        </choice>
    </define>

    <!-- Zip Code -->
    <define name="T_ZipCode">
        <choice>
            <data type="string">
                <param name="pattern">\d{5}(\-\d{4})?</param>
            </data>
            <ref name="NoAnswer"/>
        </choice>
    </define>

